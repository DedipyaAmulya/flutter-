Your employer has asked you to create an animated text feature that transforms its appearance when a user hovers over it.
SOURCE CODE:
import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      home: HoverTextExample(),
    );
  }
}

class HoverTextExample extends StatefulWidget {
  const HoverTextExample({super.key});

  @override
  State<HoverTextExample> createState() => _HoverTextExampleState();
}

class _HoverTextExampleState extends State<HoverTextExample> {
  bool _isHovered = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: MouseRegion(
          onEnter: (_) => setState(() => _isHovered = true),
          onExit: (_) => setState(() => _isHovered = false),
          child: AnimatedDefaultTextStyle(
            duration: const Duration(milliseconds: 300),
            style: TextStyle(
              fontSize: _isHovered ? 48 : 36,
              color: _isHovered ? Colors.pink : Colors.black,
              fontWeight: FontWeight.bold,
            ),
            child: const Text("Hover over me!"),
          ),
        ),
      ),
    );
  }
}
